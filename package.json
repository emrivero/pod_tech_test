{
  "name": "pod_tech_test",
  "version": "0.1.0",
  "description": "POD's Technical Test",
  "type": "module",
  "scripts": {
    "lint": "eslint src/**/** --ext .ts",
    "start": "jest test --watch --coverage",
    "start:docker": "npm install && npm start",
    "test": "jest test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emrivero/pod_tech_test.git"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "Emilio Martinez Rivero",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/emrivero/pod_tech_test/issues"
  },
  "homepage": "https://github.com/emrivero/pod_tech_test#readme",
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": [
      ".*\\.spec\\.ts$",
      ".*\\.test\\.ts$"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}